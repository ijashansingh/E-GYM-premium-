<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView

        android:id="@+id/profile_cardview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_margin="12dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/imagedetailsTV2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textSize="22sp"
        android:background="@color/purple_200"
        android:textColor="@color/white"
        android:text="IMAGE DETAILS"
        />
    <TextView
    android:id="@+id/leveldetailsTV2"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:textSize="22sp"
    android:layout_below="@+id/imagedetailsTV2"
    android:background="@color/purple_200"
    android:textColor="@color/white"
    android:text="IMAGE DETAILS"
    />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageTV2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp"
        android:src="@drawable/mario"
        android:layout_below="@+id/leveldetailsTV2"

        />
</RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>